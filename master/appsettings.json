{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    //"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug", //set "Debug" for full details
      "Override": {
        "System": "Information",
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{NewLine}===> {Timestamp:dd-MMM-yyyy HH:mm:ss.fff} [{Level}]:{NewLine}{Message}{NewLine}{Exception}"
        }
      },
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\serviceLog.txt",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760, //10MB
          //"rollingInterval": "Infinite",
          "retainedFileCountLimit": 5,
          //"shared": true,
          //"buffered": true, //set false for immediate write to log 
          "outputTemplate": "{NewLine}===> {Timestamp:dd-MMM-yyyy HH:mm:ss.fff} [{Level}]:{NewLine}{Message}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Account report service"
    }
  },
  "AllowedHosts": "*",
  "CachingMinutesValue": 3,
  "CrawlerUrl": "http://localhost:8081/getWebPageTitle"
}
